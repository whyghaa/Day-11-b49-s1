    <!-- From Blog -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col text-center p-4">
                    <h2>Created Blog</h2>
                </div>
            </div>
            <form method="post" action="/blog">
            <div class="row mb-3 justify-content-center ">
                <div class="col-8  ">
                    <label for="input-title" class="form-label fs-3">Project Name</label>
					<input type="text" class="form-control shadow-sm bg-secondary-subtle" id="input-title" name="title"/>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
            <div class="col-md-4">
                <label for="input-blog-startDate" class="form-label fs-3 ">Start Date</label>
                <input
                    type="date"
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="input-blog-startDate" 
                    name="startDate"/>
            </div>
            <div class="col-md-4">
                <label for="input-blog-endDate" class="form-label fs-3">End Date</label>
                <input
                    type="date"
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="input-blog-endDate"
                    name="endDate"/>
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <div class="col-8">
                <label for="input-blog-content" class="form-label fs-3">Description</label>
					<textarea 
                        name="content"
						class="form-control shadow-sm bg-secondary-subtle"
						id="input-blog-content"
						rows="3"
						style="height: 200px; resize: none"></textarea>
            </div>
        </div>
        <div class="row mb-2 justify-content-center">
            <div class="col-8">
                <label class="form-label fs-3">Technologies</label>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="nodejs"
                        id="checkbox-nodejs"
                        name="framework" />
                    <label class="form-check-label fs-3" for="checkbox-nodejs">Node Js</label>
                </div>
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="reactjs"
                        id="checkbox-reactjs"
                        name="framework" />
                    <label class="form-check-label fs-3" for="checkbox-reactjs">React Js</label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="nextjs"
                        id="checkbox-nextjs"
                        name="framework" />
                    <label class="form-check-label fs-3" for="checkbox-nextjs">Next Js</label>
                </div>
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="typescript"
                        id="checkbox-typescript"
                        name="framework" />
                    <label class="form-check-label fs-3" for="checkbox-typescript">TypeScript</label>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
                <div class="col-8">
                    <label for="formFile" class="form-label fs-3 ">Upload Image</label>
					<input class="form-control " type="file" id="formFile" name="images" />
                </div>
            </div>
            <div class="row mb-3 d-flex justify-content-end">
                <div class="col-4">
                    <button class="btn btn-primary rounded-pill px-5" type="submit">Submit</button>
                </div>
            </div>
            </form>
    </section>